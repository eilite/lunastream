{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "paths": { "*": [ "src/main/*", "@types/*" ]},
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types/"],
    "types": [ "react", "react-dom", "es6-promise", "node" ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "typings.d.ts",
    "classnames.d.ts",
    "./*.ts",
    "./*.tsx"
  ]
}
